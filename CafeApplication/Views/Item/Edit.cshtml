@model CafeApplication.Models.ItemDto
@{
  ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="/Item/Update/@Model.ItemID" method="POST" enctype="multipart/form-data">
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <div style="display:none;">
        @* Pass through the Item ID *@
        <input type="text" name="ItemID" value="@Model.ItemID" />
      </div>
      <div>
        <label>Item Name:</label> <input type="text" name="ItemName" value="@Model.ItemName" />
      </div>
      <div>
        <label>Item Unit:</label>
        </div>
      <select name="ItemUnit">
        @{
          var selectSlice = "";
          var selectCup = "";
          var selectBowl = "";
          var selectWhole = "";
          if (Model.ItemUnit == "Slice")
          {
            selectSlice = "selected";
          }
          else if (Model.ItemUnit == "Cup")
          {
            selectCup = "selected";
          }
          else if (Model.ItemUnit == "Bowl")
          {
            selectBowl = "selected";
          }
          else
          {
            selectWhole = "selected";
          }
          <option value="Slice" @selectSlice>Slice</option>
          <option value="Cup" @selectCup>Cup</option>
          <option value="Bowl" @selectBowl>Bowl</option>
          <option value="Whole Cake" @selectWhole>Whole Cake</option>
          }
      </select>
      </div>
      <div>
        <label>Item Calories (calories)":</label> <input type="number" name="ItemCalories" value="@Model.ItemCalories" />
      </div>
      <div>
        <label>Item Price (CAD)":</label> <input type="number" name="ItemPrice" min="0" value="@Model.ItemPrice" step=".01">
      </div>
      <div class="col-md-6 col-sm-12">
        <input type="file" name="ItemPic" />
      </div>
      <div>
        <input type="submit" value="Update Item" />

      </div>
    </div>
    

</form>

