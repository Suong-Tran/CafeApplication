@model CafeApplication.Models.ItemDto

@{
  ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this item?</h2>
<a href="/Item/List">Cancel</a>
<h3>Name: @Model.ItemName</h3>
<form action="/Item/Delete/@Model.ItemID" method="POST">
  <input type="submit" value="Confirm Delete" />
</form>

